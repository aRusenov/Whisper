<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:layout_marginLeft">@dimen/xlarge_margin</item>
        <item name="android:layout_marginRight">@dimen/xlarge_margin</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:ems">8</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="LoginButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/color_light_turquoise</item>
        <item name="android:background">@color/color_dark_white</item>
        <item name="android:layout_marginLeft">@dimen/xlarge_margin</item>
        <item name="android:layout_marginRight">@dimen/xlarge_margin</item>
    </style>

    <style name="ErrorTextView">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
    </style>

</resources>