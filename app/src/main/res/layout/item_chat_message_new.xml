<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="7dp">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/bubble_final_right">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Well thats awkward my man                   "
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_large"
            android:autoLink="web|phone"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="22:13"
                android:textSize="@dimen/font_small"
                android:textColor="@color/color_bluish_grey"/>

            <ImageView
                android:id="@+id/message_status_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/font_small"
                android:adjustViewBounds="true"
                android:src="@drawable/tick_sent"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>